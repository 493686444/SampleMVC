@model SRV.ViewModels.Log.OnModel
@{
    Layout = "~/Views/Shared/_User.cshtml";
}
@section title {
    <span class="fa fa-sign-in " aria-hidden="true"></span>
    用户登录
}
@section upTitle {
    用户登录
}
@using (Html.BeginForm(FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @*<div>
            <h3> @ViewData["tooltip"]</h3>
        </div>*@
    <label>用户名：（* 必填）</label>
    @Html.ValidationMessageFor(m => m.Name)
    @Html.TextBoxFor(m => m.Name, new { placeholder = "不是昵称，是登录用户名", @class = "form-control" })

    <label>密码：（* 必填）</label>
    @Html.ValidationMessageFor(m => m.Password)
    @Html.PasswordFor(m => m.Password, new { placeholder = "不少于4个字符", @class = "form-control" })

    <label>验证码：（* 必填）</label>
    <br />
    @ViewData["captcha"]
    <input asp-for="Captcha" style="width:80px; height:34px;margin-bottom:10px" class="form-control" />

    <div>@ViewData["result"]</div>
    //用作测试将来会删除掉

    <div class="submit">
        <input type="submit" class="btn btn-primary" value="提交">
        <label style="margin-left:16px;">
            @Html.CheckBoxFor(m => m.RememberMe)记住我
        </label>
        <span class="pull-right btn">
            <a href="">(｡ŏ_ŏ) 忘了</a>
            <a asp-page="/" style="margin-left:10px;">
                <span class="fa fa-registered"></span>
                注册
            </a>
        </span>
    </div>
}



@section aside {
    <h3 style="color: #31708f;"><span class="fa fa-question-circle "></span>说明</h3>
    <ol>
        <li>我们希望通过一起帮，能直接解决大家在电脑操作/软件使用/编程学习等方面的具体问题。</li>
        <li>现在互联网远程技术（比如QQ桌面共享）已经非常成熟，当我们再遇到上述问题，如果别人能直接远程给予帮助，岂不是好？</li>
        <li>当然，你也可以在你熟悉的领域去帮助别人。由此而形成我们这个“你帮他他帮我我帮你，大家一起帮”的网上互助社区平台。</li>
        <li>公平起见，我们还引入了 帮帮点/币/豆 三级概念，以记录和衡量社区成员的收获和贡献。</li>
        <li>赶快加入我们，赚取帮帮币吧！</li>
    </ol>
}

